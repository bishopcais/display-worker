{
  "name": "display-worker",
  "productName": "DisplayWorker",
  "version": "2.3.2",
  "description": "Display worker helps to show and manipulate contents on screen",
  "main": "src/apprpc.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "start": "./node_modules/.bin/electron src/apprpc.js",
    "postinstall": "npm rebuild --runtime=electron --target=1.4.8 --disturl=https://atom.io/download/electron --abi=51",
    "dist": "./node_modules/.bin/build"
  },
  "author": "Yedendra Shrinivasan <yshrini@us.ibm.com>, Yunfeng Zhang <zhangyun@us.ibm.com>",
  "homepage": "https://github.ibm.com/celio/display-worker",
  "repository" : {
     "type" : "git",
     "url" : "git@github.ibm.com:celio/display-worker.git"
  },
  "license": "ISC",
  "private": true,
  "dependencies": {
    "@cel/celio": "^2.0.0",
    "node-uuid": "^1.4.7",
    "robotjs": "^0.4.4",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "electron": "^1.4.5",
    "electron-builder": "^8.6.0"
  },
  "build": {
    "appId": "display-worker",
    "productName" : "display-worker",
    "category": "public.app-category.graphics",
    "linux": {
      "target": [
        "deb"
      ],
      "depends" : [ "libappindicator1", "libindicator7" ],
      "afterInstall" : "./debian/after-install.tpl"
    },
    "extraFiles" : [
      { 
        "from" : "./template",
        "to": "./template"
      },
      {
         "from" : "./cog-sample.json",
         "to" : "./cog-sample.json"
      },
      {
	      "from" : "./debian/display-worker.service",
        "to" : "./display-worker.service"
      }
    ]
  }
}
